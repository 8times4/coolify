{
	"name": "coolify",
	"description": "An open-source, hassle-free, self-hostable Heroku & Netlify alternative.",
	"version": "2.0.0-alpha",
	"license": "AGPL-3.0",
	"scripts": {
		"dev": "docker-compose -f docker-compose-dev.yml up -d && svelte-kit dev --host 0.0.0.0",
		"build": "svelte-kit build",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"db:generate": "prisma generate",
		"db:push": "prisma db push && prisma generate"
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^1.0.0-next.55",
		"@sveltejs/adapter-static": "^1.0.0-next.21",
		"@sveltejs/kit": "^1.0.0-next.191",
		"@types/bcrypt": "^5.0.0",
		"@types/js-cookie": "^3.0.1",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"autoprefixer": "^10.4.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^3.2.1",
		"postcss": "^8.3.11",
		"prettier": "^2.4.1",
		"prettier-plugin-svelte": "^2.4.0",
		"prisma": "3.4.2",
		"svelte": "^3.42.6",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.9.4",
		"tailwindcss": "^2.2.17",
		"ts-node": "^10.4.0",
		"tslib": "^2.3.1",
		"typescript": "^4.4.3"
	},
	"type": "module",
	"dependencies": {
		"@prisma/client": "3.4.2",
		"bcrypt": "^5.0.1",
		"bullmq": "^1.51.1",
		"cuid": "^2.1.8",
		"dayjs": "^1.10.7",
		"dockerode": "^3.3.1",
		"dotenv-extended": "^2.9.0",
		"got": "^11.8.2",
		"js-cookie": "^3.0.1",
		"jsonwebtoken": "^8.5.1",
		"svelte-kit-cookie-session": "^1.3.3"
	},
	"prisma": {
		"seed": "node --loader ts-node/esm prisma/seed.ts"
	}
}
